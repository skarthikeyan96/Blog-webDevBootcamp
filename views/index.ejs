<% include ./partials/header  %>

<div class="ui main text container">
    <div class="ui huge header"> 
        Blog App
    </div>
    <div class="ui top attached segement">
        <div class="ui divided items">
            <% blogData.forEach(function(data){ %>

                <div class="item">
                    <div class="image">
                        <img src="<%=data.image%>"/>        
                    </div>
                    <div class="content">
                        <a class="header" href="/blogs/<%=data._id%>"> <%= data.name %> </a>        
                        <div class="meta">
                            <span><%=data.created.toDateString()%></span>            
                        </div>
                        <div class="description">
                            <p><%=data.body.substring(0,100)%>...</p>
                        </div>
                        <div class="extras">
                            <a class="ui floated violet button" href="/blogs/<%=data._id%>"> Read More <i class="right chevron icon"></i> </a>
                        </div>
                    </div>
                </div>
             <% }) %>
        </div>
    </div>
</div>

<% include ./partials/footer  %>